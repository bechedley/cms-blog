<button class="btn btn-add btn-primary text-uppercase justify-content-right" type="button" aria-controls="addpost"
    id="add-btn" data-bs-toggle="modal" data-bs-target="#add-post-Modal">
    <span class="fa bi-plus" id="add-post"></span>
    <span id="btn-txt">Add New Blog Post</span>
</button>
<div class="dashboard-posts" id="posts">
    <div class="row mx-0">
        {{#each posts as |post|}}
        <div class="post-div col-12" data-id="{{post.id}}">
            <a class="post-card-link" href="/post/{{post.id}}">
            <div class="card d-flex flex-column align-items-center post-card">
                <div class="post-title">
                    <h3>{{post.post_title}}</h3>
                </div>
                <div class="post-title">
                    <p>{{ format_date post.post_created}}</p>
                </div>
                <div class="card-text">
                    <br />
                    <p class="text-center">{{post.post_text}}</p>
                </div>
            </div></a>
        </div>
        {{/each}}
    </div>
</div>

<!-- New Post Modal -->
<div class="modal fade new-post-Modal modal-lg" id="add-post-Modal" tabindex="-1" role="dialog"
    aria-labelledby="addPosttModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPostModalLabel">Add New Blog Post</h5>
            </div>
            <div class="modal-body">
                <form class="add-post-form">
                    <div class="input-group mb-3">
                        <div class="field-group">
                            <label for="addPostTitle" class="form-label">Blog Post Title</label>
                            <input type="text" class="form-control" id="addPostTitle" placeholder="Post Title" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="addPostText" class="form-label">Blog Post Content</label>
                        <textarea class="form-control" id="addPostText" rows="5" placeholder="Post content"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" id="add-post-btn-submit">Add Post</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>